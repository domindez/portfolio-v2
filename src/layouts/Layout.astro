---
import '@fontsource/quattrocento'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
---

<!doctype html>
<html lang='es'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />

		<!-- Título y descripción -->
		<title>Daniel Domínguez - Desarrollador Web Fullstack</title>
		<meta
			name='description'
			content='Soy Daniel Domínguez, desarrollador web y fullstack. En mi portafolio encontrarás mis proyectos y las vías de contacto para contratarme.'
		/>
		<meta
			name='keywords'
			content='Daniel Domínguez, desarrollador web, fullstack, portafolio, proyectos, contacto, contratar'
		/>
		<meta name='robots' content='index, follow' />

		<script is:inline>
			window.dataLayer = window.dataLayer || []
			function gtag() {
				dataLayer.push(arguments)
			}
		</script>

		<!-- GTM: Head -->
		<script is:inline>
			;(function (w, d, s, l, i) {
				console.log('GTM')
				w[l] = w[l] || []
				w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' })
				var f = d.getElementsByTagName(s)[0],
					j = d.createElement(s),
					dl = l != 'dataLayer' ? '&l=' + l : ''
				j.async = true
				j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl
				f.parentNode.insertBefore(j, f)
			})(window, document, 'script', 'dataLayer', 'GTM-TSJPBNVN')
		</script>

		<!-- Open Graph (para Facebook y otros) -->
		<meta property='og:title' content='Daniel Domínguez - Desarrollador Web Fullstack' />
		<meta
			property='og:description'
			content='Descubre mis proyectos y contáctame para colaborar en tu próximo proyecto.'
		/>
		<meta property='og:type' content='website' />
		<meta property='og:url' content='https://domindez.com' />
		<meta property='og:image' content='https://domindez.com/og-image.jpg' />

		<!-- Twitter Cards -->
		<meta name='twitter:card' content='summary_large_image' />
		<meta name='twitter:title' content='Daniel Domínguez - Desarrollador Web y Fullstack' />
		<meta
			name='twitter:description'
			content='Soy Daniel Domínguez, desarrollador web y fullstack. Explora mi portafolio y contáctame.'
		/>
		<meta name='twitter:image' content='https://domindez.com/og-image.jpg' />

		<!-- Canonical -->
		<link rel='canonical' href='https://domindez.com' />
	</head>
	<body>
		<!-- GTM: Body -->
		<noscript
			><iframe
				src='https://www.googletagmanager.com/ns.html?id=GTM-5LF986KH'
				height='0'
				width='0'
				style='display:none;visibility:hidden'></iframe></noscript
		>

		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	* {
		margin: 0;
		padding: 0;
		font-family: 'Quattrocento', serif;
		scroll-behavior: smooth;

		--dark: #2b2b2b;
		--main: #60a39d;
	}

	html {
		background: url('/body_bg.jpg');
		background-size: 10px;
	}

	img {
		max-width: 100%;
	}
</style>
