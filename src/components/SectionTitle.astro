---
interface Props {
	title: string
}

const { title } = Astro.props as Props
---

<header>
	<hr />
	<h2>{title}</h2>
	<hr />
</header>

<style>
	header {
		display: flex;
		align-items: center;
		gap: 20px;
		margin-bottom: 50px;
	}

	h2 {
		font-size: 2em;
		white-space: nowrap;
		color: var(--dark);
	}
	hr {
		width: 100%;
		opacity: 0.6;
	}
</style>
