---
import { Image } from 'astro:assets'
import MainHeadline from './MainHeadline.astro'
---

<section>
	<div class='img-container'>
		<Image id='image' class='img-bw' src='/me.webp' height={500} width={500} alt='Daniel Dominguez desarrollador web' />
	</div>
	<MainHeadline />
</section>

<style>
	section {
		padding: 0px 10%;
		margin-top: 10px;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 50px;
	}

	.img-container {
		padding: 15px;
		border: 1px solid #6ca5a0;
		border-radius: 50%;
		width: 200px;
		margin: auto;
	}

	.img-container img {
		display: block;
		height: auto;
		border-radius: 50%;
	}

</style>
