---
import { Image } from 'astro:assets'
import MainHeadline from './MainHeadline.astro'
---

<section>
	<div class='container'>
		<div class='img-container'>
			<Image id='image' class='img-bw' src='/me-bw.webp' height={500} width={500} alt='Daniel Dominguez desarrollador web' />
		</div>
	</div>
	<MainHeadline />
</section>

<style>
	section {
		padding: 0px 10%;
		margin-top: 40px;
		display: flex;
		align-items: center;
		gap: 10%;
	}
	.container {
		width: 33%;
		max-width: 500px;
		min-width: 300px;
		border: 1px solid #0000003b;
	}

	.img-container {
		padding: 15px;
	}

	.img-container img {
		display: block;
		height: auto;
	}

	@media (max-width: 768px) {
		section{
			flex-direction: column;
			gap: 50px;
		}

		.container {
			width: 100%;
		}
	}

</style>