---
import { Image } from 'astro:assets'
import MainHeadline from './MainHeadline.astro'
---

<section>
	<div class="img-container">
		<Image loading={'eager'} id="image" class="img-bw" src="/me.webp" height={500} width={500} alt="Daniel Dominguez desarrollador web" />
	</div>
	<MainHeadline />
</section>

<style>
	section {
		padding: 0px 10%;
		margin-top: 10px;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 50px;
	}

	.img-container {
		padding: 15px;
		border: 1px solid #6ca5a0;
		border-radius: 50%;
		width: 200px;
		margin: auto;
		position: relative;
	}

	.img-container img {
		display: block;
		height: auto;
		border-radius: 50%;
	}

	.img-container::after {
		content: "";
		position: absolute;
		top: 50%;
		left: 50%;
		width: 100%;
		height: 100%;
		border: 1px solid #6ca5a0;
		border-radius: 50%;
		transform: translate(-50%, -50%) scale(1);
		opacity: 0;
		animation: ripple 2s infinite;
	}

	@keyframes ripple {
		0% {
			transform: translate(-50%, -50%) scale(1);
			opacity: 0.7;
		}
		70% {
			opacity: 0;
		}
		100% {
			transform: translate(-50%, -50%) scale(1.5);
			opacity: 0;
		}
	}
</style>
