<section id='works'>
	<SectionTitle title='Mis Trabajos' />
	<h4>Algunos de mis últimos proyectos</h4>

	<div class='container'>
		{
			works.map((work, index) => (
				<article class={`work-item ${index >= 6 ? 'mobile-hidden' : ''}`}>
					<div class='img-container'>
						<Image
							class='main-img'
							height={300}
							width={500}
							src={work.img}
							alt={work.title}
							style={{ objectFit: 'cover', width: '100%', height: '100%' }}
						/>
					</div>
					<div class='info'>
						<h3>{work.title}</h3>
						{work.stack && (
							<ul class='stack-list'>
								{work.stack.map((tech) => (
									<li>
										<Image src={`/logos/${tech}.png`} alt={tech} height={200} width={500} />
									</li>
								))}
							</ul>
						)}
						<p>{work.description}</p>
						<a href={work.link} target='_blank'>
							Ir a la web!
						</a>
					</div>
				</article>
			))
		}
	</div>
	<button id='load-more' class='btn'>Mostrar más</button>
</section>

<style>
	section {
		margin: 50px 10%;
	}
	h4 {
		margin-top: -30px;
		margin-bottom: 30px;
		text-align: center;
		font-weight: 400;
	}

	article:hover {
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.053);
	}

	.img-container {
		overflow: hidden;
		position: relative; /* Required for absolute positioning of .info */
		transition: opacity 0.3s ease-in-out; /* Transition for opacity */
		padding-bottom: 100%; /* Make it a square */
		height: 0; /* Override the height */
	}

	.container {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Ajuste automático con tamaño mínimo */
		gap: 20px;
	}

	/* Estado inicial oculto para la animación */
	article {
		background-color: white;
		transition: 0.3s ease-in-out;
		opacity: 0;
		transform: translateY(20px);
		position: relative;
		width: 100%;
		transition: 0.3s ease-in-out;
	}

	article:hover .info {
		opacity: 1;
		z-index: 2;
	}

	article:hover .img-container {
		opacity: 0;
	}

	/* Cuando el article entra en vista se le añade la clase "animate" para activar la animación */
	article.animate {
		animation: fadeInUp 0.6s forwards;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.info {
		padding: 20px;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-evenly;
		position: absolute;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		z-index: -1;
		background-color: white;
		opacity: 0;
		transition: opacity 0.3s ease-in-out; /* Transition for opacity */
		box-sizing: border-box; /* Ensure padding doesn't increase the size */
	}

	a {
		text-decoration: none;
		color: black;
		border: 1px solid black;
		padding: 10px 20px;
	}

	.main-img {
		width: 100%;
		height: auto;
		transition: 0.3s ease-in-out;
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	h3 {
		font-size: 1em;
		margin-bottom: 10px;
	}

	p {
		line-height: 1.5em;
	}

	.stack-list {
		display: flex;
		list-style: none;
		width: fit-content;
		border-radius: 5px;
	}

	.stack-list li {
		display: flex;
		align-items: center;
		padding: 7px;
		gap: 0px;
	}

	.stack-list img {
		height: 25px;
		width: 25px;
		object-fit: contain;
	}

	/* Oculta los artículos con la clase "hidden" */
	.hidden {
		display: none;
	}

	/* Nueva clase para ocultar elementos solo en móvil */
	.mobile-hidden {
		display: none;
	}

	.btn {
		display: none; /* Hidden by default */
		margin: 50px auto 30px;
		padding: 10px 20px;
		border: none;
		background-color: #333;
		cursor: pointer;
		border-radius: 3px;
		font-size: 1em;
		color: white;
		transition: 0.3s ease-in-out;
	}

	.btn:hover {
		background-color: #5b5b5b;
	}

	@media (max-width: 768px) {
		.container {
			grid-template-columns: 1fr; /* Force single column */
		}

		article {
			min-width: 300px; /* Ensure a minimum width */
		}
	}

	@media (max-width: 1190px) {
		.btn {
			display: block; /* Show button on smaller screens */
		}

		/* Keep mobile-hidden active at smaller screens */
		.mobile-hidden {
			display: none;
		}
	}

	@media (min-width: 1191px) {
		/* Show all works on larger screens */
		.mobile-hidden {
			display: block;
		}
	}
</style>

<script>
	// Manejador de la animación cuando los elementos entran en vista
	document.addEventListener('DOMContentLoaded', () => {
		const articles = document.querySelectorAll('article:not(.hidden)')
		const observer = new IntersectionObserver(
			(entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						entry.target.classList.add('animate')
						observer.unobserve(entry.target)
					}
				})
			},
			{ threshold: 0.1 }
		)

		articles.forEach((article) => observer.observe(article))

		// Check width to decide if load more button should be visible
		const loadMoreButton = document.getElementById('load-more')

		// Initial check for button visibility based on screen size
		function checkScreenSize() {
			if (loadMoreButton) {
				if (window.innerWidth <= 1190) {
					loadMoreButton.style.display = 'block'
				} else {
					loadMoreButton.style.display = 'none'
				}
			}
		}

		// Check on load
		checkScreenSize()

		// Check on resize
		window.addEventListener('resize', () => {
			checkScreenSize()
		})
	})

	// Funcionalidad del botón "Mostrar más"
	const loadMoreButton = document.getElementById('load-more')
	loadMoreButton?.addEventListener('click', () => {
		// Selecciona los próximos 3 artículos que están ocultos
		const hiddenArticles = document.querySelectorAll('.container article.mobile-hidden')
		for (let i = 0; i < 3 && i < hiddenArticles.length; i++) {
			hiddenArticles[i].classList.remove('mobile-hidden')
			hiddenArticles[i].classList.add('animate')
		}
		// Si ya no quedan artículos ocultos, se oculta el botón
		if (document.querySelectorAll('.container article.mobile-hidden').length === 0) {
			loadMoreButton.style.display = 'none'
		}
	})
</script>
